# Firebase Admin SDK Configuration
# Service account key for overlandaventure project
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project-id",...}'

# Firebase Client SDK Configuration (for browser)
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789012"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789012:web:abcdef123456789012345"

# Deployment Configuration
# Set to 'static' for static deployments to disable dynamic features
NEXT_PUBLIC_DEPLOYMENT_TYPE="dynamic"

# Base Path Configuration
# Set the base path for subdirectory deployment (e.g., '/out' for GitHub Pages)
# Leave empty ("") for root deployment
# Examples:
#   NEXT_PUBLIC_BASE_PATH="/out"     # For GitHub Pages or subdirectory deployment
#   NEXT_PUBLIC_BASE_PATH=""         # For root domain deployment
NEXT_PUBLIC_BASE_PATH="/out"
